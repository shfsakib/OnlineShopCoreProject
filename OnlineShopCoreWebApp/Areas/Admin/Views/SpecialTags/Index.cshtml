@model IEnumerable<OnlineShopCoreWebApp.Models.SpecialTags>

@{
    ViewData["Title"] = "Add tag";
}


<br />
<br />
<div class="row">
    <div class="col-md-6">
        <h2 class="text-info" style="margin-left:170px;">Tag List</h2>
    </div>

    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;New Tag</a>
    </div>
</div>
<br />
<div class="" style="width:70%;margin:auto">

    <table class="table table-striped border" id="myTable" style="width:100%;margin:auto;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TagName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TagName)
                    </td>
                    <td width="250px">
                        <a asp-action="Edit" title="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" title="Details" asp-route-id="@item.Id" class="btn btn-primary" style="background-color:green;margin-left:2px;"><i class="fas fa-list"></i></a>
                        <a asp-action="Delete" title="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="background-color:red;margin-left:2px;"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts{

    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
    //      $(document).ready( function () {
    //$('#myTable').DataTable();
    //      });
        $(document).ready(function() {
    $('#myTable').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
    });
    $(function () {
        var save = '@TempData["save"]';

        if (save != null) {
            alertify.warning(save);
        }


    })
    </script>
}
