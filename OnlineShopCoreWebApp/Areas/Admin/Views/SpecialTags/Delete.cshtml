@model OnlineShopCoreWebApp.Models.SpecialTags

@{
    ViewData["Title"] = "Delete tag";
}

<h2 style="margin-left:8%">Delete Tag</h2>

<h3 style="margin-left:8%">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TagName)
        </dt>
        <dd>
            @*@Html.DisplayFor(model => model.TagName)*@
            <input asp-for="@Model.TagName" readonly="readonly" style="width:50%;" class="form-control" />

