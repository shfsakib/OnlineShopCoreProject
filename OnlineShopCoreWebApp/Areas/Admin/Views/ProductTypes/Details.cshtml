@model OnlineShopCoreWebApp.Models.ProductTypes
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Details of Product Type</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-3" style="margin-left:15px;">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-md-4">
                <input asp-for="ProductType" readonly="readonly" class="form-control" />
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |

                <a asp-action="Index" class="btn btn-success">Back to list</a>

            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
