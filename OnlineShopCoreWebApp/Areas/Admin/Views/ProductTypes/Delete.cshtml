@model OnlineShopCoreWebApp.Models.ProductTypes
@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info">Delete Product Type</h2>
<h3>Are you sure you want to delete this?</h3>

<form asp-action="Delete" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-3" style="margin-left:15px;">
                <label asp-for="ProductType"></label>
            </div>
            <div class="col-md-4">
                <input asp-for="ProductType" readonly="readonly" class="form-control" />
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
